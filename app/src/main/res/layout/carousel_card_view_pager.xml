<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.github.islamkhsh.CardSliderViewPager
        android:id="@+id/csViewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardSlider_otherPagesWidth="@dimen/margin_48"
        app:cardSlider_pageMargin="@dimen/margin_12"
        app:cardSlider_indicator="@id/indicator"
        app:cardSlider_smallAlphaFactor="0.7"
        app:cardSlider_smallScaleFactor="0.9"
        app:layout_constraintBottom_toBottomOf="@id/indicator"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.github.islamkhsh.CardSliderIndicator
        android:id="@+id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_16"
        app:indicatorsToShow="7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/csViewPager" />
</androidx.constraintlayout.widget.ConstraintLayout>